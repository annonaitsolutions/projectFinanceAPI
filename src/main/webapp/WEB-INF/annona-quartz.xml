<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  
 http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">
	
	
	<bean id="notificationsScheduler"  class="annona.scheduler.NotificationsScheduler" />
	 <!-- specifing class and method that is going to be called on a specified   
  time basis -->  
 <!-- Spring Quartz -->
	<bean name="notificationsJob" class="org.springframework.scheduling.quartz.JobDetailBean">
		<property name="jobClass" value="annona.scheduler.NotificationsJob" />

		<property name="jobDataAsMap">
		  <map>
			<entry key="notificationsScheduler" value-ref="notificationsScheduler" />
		  </map>
		</property>

	</bean> 
  
 
		<!-- Cron Trigger, run every 5 seconds -->
		<bean id="cronTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">

			<property name="jobDetail" ref="notificationsJob" />
			<property name="cronExpression" value="0 0 8 * * ?" />

		</bean>


		<bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
                <property name="jobDetails">
                    <list>
                        <ref bean="notificationsJob" />
                    </list>
                </property>

                <property name="triggers">
                    <list>
                        <ref bean="cronTrigger" />
                    </list>
                    </property>
            </bean>
		

	</beans>